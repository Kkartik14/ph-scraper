# Product Hunt API Credentials
PH_CLIENT_ID=your_client_id_here
PH_CLIENT_SECRET=your_client_secret_here

# Groq API Key for LLM Analysis (Required for trend analysis)
GROQ_API_KEY=your_groq_api_key_here

# Groq Client Configuration (Optional)
GROQ_TIMEOUT=60.0            # Default timeout in seconds
GROQ_MAX_RETRIES=2           # Number of retries for API requests
GROQ_BASE_URL=https://api.groq.com  # Only change if using a different endpoint

# Product Hunt Scraper Settings
REQUEST_TIMEOUT=30           # API request timeout in seconds
MAX_RETRIES=3                # Number of retries for failed requests
MIN_DELAY=2                  # Minimum delay between requests (seconds)
MAX_DELAY=5                  # Maximum delay between requests (seconds)

# Browser Fallback Settings (for web scraping as backup)
HEADLESS=true                # Run browser in headless mode
BROWSER_TYPE=chrome          # Browser to use (chrome, firefox, etc.) 